<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Database Info</title>
</head>

<body>
  <h1>Data from Database</h1>
  <h2>Table Names</h2>
  <ul id="tableList"></ul>
  <h2>Table Columns</h2>
  <div id="columnSection"></div>
  <h2>Products</h2>
  <ul id="productList"></ul>
  <script>
    async function fetchData() {
      try {
        const tableResponse = await fetch('/getData');
        const tableData = await tableResponse.json();

        const productResponse = await fetch('/getProducts');
        const productData = await productResponse.json();

        const tableList = document.getElementById('tableList');
        const columnSection = document.getElementById('columnSection');
        const productList = document.getElementById('productList');

        for (const item of tableData) {
          const listItem = document.createElement('li');
          listItem.textContent = JSON.stringify(item);
          tableList.appendChild(listItem);

          const columnsResponse = await fetch(`/getTableColumns/${item.table_name}`);
          const columnsData = await columnsResponse.json();

          const tableTitle = document.createElement('h3');
          tableTitle.textContent = item.table_name;
          columnSection.appendChild(tableTitle);

          const columnList = document.createElement('ul');
          columnsData.forEach(column => {
            const columnItem = document.createElement('li');
            columnItem.textContent = column.column_name;
            columnList.appendChild(columnItem);
          });
          columnSection.appendChild(columnList);
        }

        productData.forEach(item => {
          const listItem = document.createElement('li');
          listItem.textContent = JSON.stringify(item);
          productList.appendChild(listItem);
        });
      } catch (error) {
        console.error('Error fetching data:', error);
      }
    }
    fetchData();
  </script>
</body>

</html>