<%- include('partials/head.ejs') %>
<%- include('partials/shopHeader.ejs') %>
    <main class="main-container">
      <section class="collection container">
        <% item.forEach(product=> { %>
          <picture class="card-item__cover">
            <span class="card-item__tag">
              <%= product.category_name %>
            </span>
            <img class="card-item__img__front" src="/img/<%= product.image_front %>" alt="<%= product.product_name %>">
            <img class="card-item__img__back" src="/img/<%= product.image_back %>"
              alt="<%= product.product_name %> en su caja">
          </picture>
          <article class="collection__content">
            <p class="card-item__license">
              <%=product.category_name %>
            </p>
            <h3 class="slider__title">
              <%= product.product_name %>
            </h3>
            <p class="collection__item_text">
              <%= product.product_description %>
            </p>
            <p class="card-item__item_price">
              $ <%= product.price %>
            </p>
            <div class="d-flex">
              <input class="fs-3" type="number" id="quantity" name="quantity" min="1" max="999" value="1">
              <button type="button" class="btn btn-danger ms-3">Agregar al Carrito</button>
            </div>
          </article>
      </section>
      <% }) %>

        <section class="slider container glide">
          <h2 class="slider__title">PRODUCTOS RELACIONADOS</h2>
          <div class="glide__track" data-glide-el="track">
            <ul class="slider__items glide__slides">
              <% list.forEach(product=> { %>
   <li class="slider__item glide__slide">
            <article class="card-item">
              <a class="card-item__link" href="/shop/item/<%= product.product_id %>">
                <picture class="card-item__cover">
                  <span class="card-item__tag"><%= product.category_name %></span>
                  <img class="card-item__img__front" src="/img/<%= product.image_front %>" alt="<%= product.product_name %>">
                  <img class="card-item__img__back" src="/img/<%= product.image_back %>" alt="<%= product.product_name %> en su caja">
                </picture>
                <div class="card-item__content">
                  <p class="card-item__license"><%= product.licence_name %></p>
                  <h4 class="card-item__name"><%= product.product_name %></h4>
                  <p class="card-item__price">$ <%= product.price %></p>
                  <p class="card-item__promo"><%= product.discount %>% desc.</p>
                </div>
              </a>
            </article>
          </li>
                <% }); %>
            </ul>
          </div>
          <div class="glide__arrows" data-glide-el="controls">
            <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><iconify-icon
                icon="tabler:chevron-left"></iconify-icon></button>
            <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><iconify-icon
                icon="tabler:chevron-right"></iconify-icon></button>
          </div>
        </section>
    </main>
<%- include('partials/shopFooter.ejs') %>
<%- include('partials/foot.ejs') %>
