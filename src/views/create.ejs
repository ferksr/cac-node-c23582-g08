<%- include('partials/head.ejs') %>
<%- include('partials/adminHeader.ejs') %>
    <main class="main-container">
      <section class="container mt-3">
        <div class="container">
          <div class="row">
            <p class="login__text">CREAR NUEVO ITEM</p>
          </div>
          
          <form action="/admin/create" method="POST">
            <div class="row mb-4">
                <div class="col d-flex align-items-center">
                    <p class="m-0">Categoría</p>
                    <select id="category_id" name="category_id" class="ms-3 col-2 fs-3 me-5">
                        <option value="1">Category 1</option>
                        <option value="2">Category 2</option>
                    </select>
                    <p class="m-0">Licencia</p>
                    <select id="licence_id" name="licence_id" class="ms-3 col-2 fs-3">
                        <option value="1">License 1</option>
                        <option value="2">License 2</option>
                    </select>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col d-flex align-items-center">
                    <p class="m-0">Nombre del producto</p>
                    <input type="text" name="product_name" class="collection__input ms-3 col-2 fs-3" required>
                </div>
            </div>
            <div class="row mb-4">
                <textarea name="product_description" id="description" cols="15" rows="5" class="col-5 fs-3" placeholder="Descripción" required></textarea>
            </div>
            <div class="row mb-4">
                <div class="col d-flex align-items-center">
                    <p class="mb-0">SKU</p>
                    <input type="text" name="sku" class="ms-3 col-2 fs-3 me-5" required>
                    <p class="mb-0">Precio</p>
                    <input type="text" name="price" class="ms-3 col-2 fs-3 me-5" required>
                    <p class="mb-0">Stock</p>
                    <input type="text" name="stock" class="ms-3 col-2 fs-3" required>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col d-flex align-items-center">
                    <p class="mb-0">Descuento</p>
                    <input type="text" name="discount" class="ms-3 col-2 fs-3 me-5" required>
                    <p class="mb-0">Cuotas</p>
                    <input type="text" name="dues" class="ms-3 col-2 fs-3" required>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col d-flex align-items-center">
                    <p class="mb-0">Images</p>
                    <input type="text" name="image_front" class="ms-3 col-5 fs-3" placeholder="Image Front URL" required>
                    <input type="text" name="image_back" class="ms-3 col-5 fs-3" placeholder="Image Back URL" required>
                </div>
            </div>
                    <div class="row mb-4">
                      <div class="col d-flex align-items-center">
                        <p class="mb-0">Images</p>
                        <input type="file" class="ms-3 col-5 fs-3" />
                      </div>
                    </div>

            <div class="row mb-4">
                <div class="col d-flex align-items-center">
                    <button type="submit" class="btn btn-danger">Agregar producto</button>
                    <button type="reset" class="btn btn-danger ms-3">Limpiar</button>
                </div>
            </div>
        

        
        </form>

        </div>
      </section>
    </main>

<%- include('partials/adminFooter.ejs') %>
<%- include('partials/foot.ejs') %>
