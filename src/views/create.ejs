<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Shop | Funkoshop</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../../css/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="../../css/index.css" />
  </head>

  <body>
    <%- include('partials/adminHeader.ejs') %>
    <main class="main-container">
      <section class="container mt-3">
        <div class="container">
          <div class="row">
            <p class="login__text">CREAR NUEVO ITEM</p>
          </div>
          <form action="">
            <div class="row mb-4">
              <div class="col d-flex align-items-center">
                <p class="m-0">Categoría</p>
                <select
                  id="category"
                  name="category"
                  class="ms-3 col-2 fs-3 me-5"
                >
                  <option value="test">Test</option>
                </select>
                <p class="m-0">Licencia</p>
                <select id="licencia" name="licencia" class="ms-3 col-2 fs-3">
                  <option value="test">Test</option>
                </select>
              </div>
            </div>
            <div class="row mb-4">
              <div class="col d-flex align-items-center">
                <p class="m-0">Nombre del producto</p>
                <input type="text" class="collection__input ms-3 col-2 fs-3" />
              </div>
            </div>
            <div class="row mb-4">
              <textarea
                name="description"
                id="description"
                cols="15"
                rows="5"
                class="col-5 fs-3"
                placeholder="Descripción"
              ></textarea>
            </div>
            <!-- Line 4: SKU + input, Price + input, Stock + input -->
            <div class="row mb-4">
              <div class="col d-flex align-items-center">
                <p class="mb-0">SKU</p>
                <input type="text" class="ms-3 col-2 fs-3 me-5" />
                <p class="mb-0">Precio</p>
                <input type="text" class="ms-3 col-2 fs-3 me-5" />
                <p class="mb-0">Stock</p>
                <input type="text" class="ms-3 col-2 fs-3" />
              </div>
            </div>

            <!-- Line 5: Discount + input, Cuotes + dropdown -->
            <div class="row mb-4">
              <div class="col d-flex align-items-center">
                <p class="mb-0">Descuento</p>
                <input type="text" class="ms-3 col-2 fs-3 me-5" />
                <p class="mb-0">Cuotas</p>
                <select class="ms-3 col-2 fs-3">
                  <option value="test">Test</option>
                </select>
              </div>
            </div>

            <!-- Line 6: Images + File upload button -->
            <div class="row mb-4">
              <div class="col d-flex align-items-center">
                <p class="mb-0">Images</p>
                <input type="file" class="ms-3 col-5 fs-3" />
              </div>
            </div>

            <!-- Line 7: Add Producto button + Clear form button -->
            <div class="row mb-4">
              <div class="col d-flex align-items-center">
                <button type="submit" class="btn btn-danger">
                  Agregar producto
                </button>
                <button type="reset" class="btn btn-danger ms-3">
                  Limpiar
                </button>
              </div>
            </div>
          </form>
        </div>
      </section>
    </main>

    <%- include('partials/adminFooter.ejs') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
  </body>
</html>
