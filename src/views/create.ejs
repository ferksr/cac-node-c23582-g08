<%- include('partials/head.ejs') %>
<%- include('partials/adminHeader.ejs') %>
    <main class="main-container">
      <section class="container mt-3">
        <div class="container">
          <div class="row">
            <p class="login__text">CREAR NUEVO PRODUCTO</p>
          </div>
          <form action="/admin/create" method="POST" enctype="application/x-www-form-urlencoded">
            <div class="row mb-4">
              <div class="col d-flex align-items-center">
                <p class="m-0">Categoría</p>
                <select
                  id="category_id"
                  name="category_id"
                  class="ms-3 col-2 fs-3 me-5"
                >
                <option value="" disabled selected hidden>Seleccionar</option>
                <% categories.forEach((category, i) => { %>
                    <option value="<%= i+1%>"><%= category.category_name%></option>
                <% }); %> 
                </select>
                <p class="m-0">Licencia</p>
                <select id="licence_id" name="licence_id" class="ms-3 col-2 fs-3">
                  <option value="" disabled selected hidden>Seleccionar</option>
                    <% licences.forEach( (licence, i )=> { %>
                        <option value="<%= i+1%>"><%= licence.licence_name%></option>
                    <% }); %>
                </select>
              </div>
            </div>
            <div class="row mb-4">
              <div class="col d-flex align-items-center">
                <p class="m-0">Nombre del producto</p>
                <input type="text" name="product_name" class="collection__input ms-3 col-2 fs-3" />
              </div>
            </div>
            <div class="row mb-4">
              <textarea
                name="product_description"
                id="product_description"
                cols="15"
                rows="5"
                class="col-5 fs-3"
                placeholder="Descripción"
              ></textarea>
            </div>
            <!-- Line 4: SKU + input, Price + input, Stock + input -->
            <div class="row mb-4">
              <div class="col d-flex align-items-center">
                <p class="mb-0">SKU</p>
                <input type="text" name="sku" class="ms-3 col-2 fs-3 me-5" />
                <p class="mb-0">Precio</p>
                <input type="text" name="price" class="ms-3 col-2 fs-3 me-5" />
                <p class="mb-0">Stock</p>
                <input type="text" name="stock" class="ms-3 col-2 fs-3" />
              </div>
            </div>

            <!-- Line 5: Discount + input, Cuotes + dropdown -->
            <div class="row mb-4">
              <div class="col d-flex align-items-center">
                <p class="mb-0">Descuento</p>
                <input type="text" name="discount" class="ms-3 col-2 fs-3 me-5" />
                <p class="mb-0">Cuotas</p>
                <select name="dues" class="ms-3 col-2 fs-3">
                  <option value="test">10</option>
                </select>
              </div>
            </div>

            
            <!-- <div class="row mb-4">
              <div class="col d-flex align-items-center">
                <p class="mb-0">Images</p>
                <input type="file" class="ms-3 col-5 fs-3" />
              </div>
            </div> -->

            <!-- <div class="row mb-4">
              <div class="col d-flex align-items-center">
                <p class="mb-0">Imagen Frontal</p>
                <input type="text" name="image_front" class="ms-3 col-2 fs-3 me-5" />
                <p class="mb-0">Imagen Trasera</p>
                <input type="text" name="image_back" class="ms-3 col-2 fs-3 me-5" />
              </div>
            </div> -->

            <div class="row mb-4">
              <div class="col d-flex align-items-center">
                <p class="mb-0">Front Image URL</p>
                <input name="image_front" value="" type="text" class="ms-3 col-2 fs-3 me-5" />
                <p class="mb-0">Back Image URL</p>
                <input name="image_back" value="" type="text" class="ms-3 col-2 fs-3" />
              </div>
            </div>


            <!-- Line 7: Add Producto button + Clear form button -->
            <div class="row mb-4">
              <div class="col d-flex align-items-center">
                <button type="submit" class="btn btn-danger">
                  Agregar producto
                </button>
                <button type="reset" class="btn btn-danger ms-3">
                  Limpiar
                </button>
              </div>
            </div>
          </form>
        </div>
      </section>
    </main>

